<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WhatsApp Eventer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnStartStop"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start Overlay"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnOverlayPermission"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Grant Overlay Permission"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnUsageStatsPermission"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Grant Usage Stats Permission"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnAccessibilityPermission"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Grant Accessibility Permission"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Ready"
        android:layout_marginTop="32dp" />

</LinearLayout> 